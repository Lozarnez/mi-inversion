<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header">
      <h3>Nuevo Paquete</h3>
    </div>
    <div class="card-body">
      <form action="/invPackages/new-package" method="POST">
        <div class="form-group">
          <input type="text" name="packageName" class="form-control" placeholder="Título" autofocus>
        </div>
        <div class="form-group">
          <label for="minInv">Inversión mínima</label>
          <input type="number" name="minInvestment" class="form-control" id="minInv">
        </div>
        <div class="form-group">
          <label for="maxInv">Inversión máxima</label>
          <input type="number" name="maxInvestment" class="form-control" id="maxInv">
        </div>
        <div class="form-group">
          <label for="increment">Tasa mensual (%)</label>
          <input type="number" step="any" name="increment" class="form-control" id="increment">
        </div>
        <div class="form-group">
          <label for="period">Duración del plan (meses)</label>
          <input type="number" name="period" class="form-control" id="period">
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Guardar
          </button>
        </div>
      </form>
    </div>
  </div>
</div>